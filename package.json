{
  "name": "ts-template",
  "version": "1.0.1",
  "description": "A Typescript initial template with eslint",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "cross-env NODE_ENV=development APP_PORT=3000 nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts ./src ./tests",
    "test": "cross-env NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/razondpro/ts-template.git"
  },
  "keywords": [
    "typescript",
    "express",
    "nodejs",
    "template",
    "starter",
    "starter-template",
    "clean-architecture",
    "backend",
    "backend-template",
    "eslint",
    "microservice",
    "microservice-template"
  ],
  "author": "Razon Hazi Begum",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/razondpro/ts-template/issues"
  },
  "homepage": "https://github.com/razondpro/ts-template#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.1.7",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0"
  }
}
